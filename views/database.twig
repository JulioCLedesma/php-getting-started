{% extends "layout.html" %}

{% block content %}
<p>Lista de items</p>

<ul>
{% for n in names %}
  <li>{{ n.name }} <a href="/edit/{{ n.id }}">Editar</a> | <a href="/delete/{{ n.id }}">Eliminar</a> | <a href="/view/{{ n.id }}" class="btn btn-info">Ver</a></li>
{% else %}
  <li><em>No entries yet!</em></li>
{% endfor %}
</ul>

<a href="/" class="btn btn-primary">Regresar</a>
<a href="/add" class="btn btn-success">Agregar Item</a>

{% endblock %}